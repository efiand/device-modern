{% extends 'layouts/main.njk' %}

{% block main %}
	<h1 class="visually-hidden">{{ projectName }}</h1>

	{% with promo | setProp('cssMix', 'centerer') %}
		{% include getComponentPath('promo') %}
	{% endwith %}

	{% set cssMix = 'centerer' %}
	{% include getComponentPath('categories') %}

	{% with services %}
		{% include getComponentPath('services') %}
	{% endwith %}

	{% with accentLink | setProp('cssMix', 'centerer') %}
		{% include getComponentPath('promo-button') %}
	{% endwith %}

	{% with about | setProp('cssMix', 'centerer') %}
		{% include getComponentPath('about') %}
	{% endwith %}

	{% with subscribe %}
		{% include getComponentPath('subscribe') %}
	{% endwith %}
{% endblock %}
